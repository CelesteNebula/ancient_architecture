<!-- components/tabbar/tabbar.wxml -->
<view class="tabbar">
  <view class="tabbar-item" bindtap="onTabItemTap" data-page="index">
    <image src="/assets/icon/home.png" mode="widthFix" class="tabbar-icon"></image>
    <text class="tabbar-text" >首页</text>
  </view>
  <view class="tabbar-item special" bindtap="handlePhotoRecognition">
    <view class="special-icon">
      <image src="/assets/icon/拍照识别.png" mode="widthFix" class="photo-icon"></image>
    </view>
  </view>
  <view class="tabbar-item" bindtap="onTabItemTap" data-page="my">
    <image src="/assets/icon/my.png" mode="widthFix" class="tabbar-icon"></image>
    <text class="tabbar-text" >我的</text>
  </view>
</view>
