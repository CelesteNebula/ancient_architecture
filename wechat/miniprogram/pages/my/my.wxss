/* 弹窗样式 */
.modal-content {
  background-color: rgba(255, 255, 255, 0.95); /* 半透明背景 */
  padding: 20px;
  border-radius: 15px; /* 更大的圆角 */
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* 增加阴影效果 */
  text-align: center;
  width: 80%;
  max-width: 300px; /* 限制最大宽度 */
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-bottom: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}

.identity {
  margin-top: 10px;
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.quota {
  margin-top: 10px;
  font-size: 16px;
  color: #555;
}

.usage-image, .about-image {
  max-width: 100%; /* 确保图片不会超出父容器宽度 */
  max-height: 80vh; /* 确保图片不会超出视口高度 */
  border-radius: 15px; /* 更大的圆角 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 增加阴影效果 */
}