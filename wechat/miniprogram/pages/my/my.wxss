/* my.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5; /* 设置背景颜色 */
  height: 100vh;
  padding-bottom: 60px; /* 确保底部内容不会被tabbar遮挡 */
  -webkit-tap-highlight-color: transparent; /* 移除点击时的淡蓝色响应 */
}

.tab {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #303d54;
  width: 100%;
  height: 35%;
}

.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  justify-content: center;
}

.login-icon {
  width: 80px;
  height: 80px;
  border-radius: 50%; /* 设置圆形头像 */
}

.login-text {
  margin-top: 15px;
  color: #f5f5f5;
}

.info-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 20px;
  padding: 20px;
  background-color: #ffffff; /* 设置内容区背景颜色 */
  border-radius: 10px; /* 设置圆角 */
  width: 90%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 设置阴影 */
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10px;
  cursor: pointer; /* 鼠标悬停时显示手型图标 */
}

.info-icon {
  width: 30px;
  height: 30px;
}

.info-text {
  margin-top: 5px;
  color: #303d54;
  text-align: center;
}

/* 模态框背景 */
